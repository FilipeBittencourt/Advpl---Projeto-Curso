@using Facile.BusinessPortal.Model

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-4 col-xl-4">
        <div class="p-3 bg-danger-900 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @String.Format("{0:C2}", ViewBag.TotalVencido)
                    <small class="m-0 l-h-n">Total Vencido</small>
                </h3>
            </div>
            <i class="fal fa-user position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n1" style="font-size:6rem"></i>
        </div>
    </div>
    <div class="col-sm-4 col-xl-4">
        <div class="p-3 bg-warning-900 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @String.Format("{0:C2}", ViewBag.TotalAVencerMenor15)
                    <small class="m-0 l-h-n">Total a vencer em até 15 dias</small>
                </h3>
            </div>
            <i class="fal fa-gem position-absolute pos-right pos-bottom opacity-15  mb-n1 mr-n4" style="font-size: 6rem;"></i>
        </div>
    </div>
    <div class="col-sm-4 col-xl-4">
        <div class="p-3 bg-success-900 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @String.Format("{0:C2}", ViewBag.TotalAVencerMaior15)
                    <small class="m-0 l-h-n">Total a vencer após 15 dias</small>
                </h3>
            </div>
            <i class="fal fa-lightbulb position-absolute pos-right pos-bottom opacity-15 mb-n5 mr-n6" style="font-size: 8rem;"></i>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div id="panel-4" class="panel panel-sortable" role="widget">
            <div class="panel-hdr" role="heading">
                <h2 class="ui-sortable-handle">Quantidade de Boletos</h2>
                @*<div class="panel-saving mr-2" style="display:none"><i class="fal fa-spinner-third fa-spin-4x fs-xl"></i></div><div class="panel-toolbar" role="menu"><a href="#" class="btn btn-panel hover-effect-dot js-panel-collapse waves-effect waves-themed" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></a> <a href="#" class="btn btn-panel hover-effect-dot js-panel-fullscreen waves-effect waves-themed" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></a> <a href="#" class="btn btn-panel hover-effect-dot js-panel-close waves-effect waves-themed" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></a></div>*@
            </div>
            <div class="panel-container show" role="content">
                <div class="loader"><i class="fal fa-spinner-third fa-spin-4x fs-xxl"></i></div>
                <div class="panel-content jqvmap-bg-ocean p-0" style="height: 330px;">
                    <div class="col-lg-12 col-xl-12 pl-lg-3">
                        <div class="d-flex mt-2">
                            Quantidade Vencido
                            <span class="d-inline-block ml-auto">@ViewBag.QuantidadeVencido/@ViewBag.QuantidadeTotal</span>
                        </div>
                        <div class="progress progress-sm mb-3" style="height:16px">
                            <div class="progress-bar bg-primary-400" role="progressbar" style="width: @ViewBag.QuantidadeVencido%;" aria-valuenow="@ViewBag.QuantidadeVencido" aria-valuemin="0" aria-valuemax="@ViewBag.QuantidadeTotal"></div>
                        </div>
                        <div class="d-flex">
                            Quantidade a Vencer <= 15
                            <span class="d-inline-block ml-auto">@ViewBag.QuantidadeAVencerMenor15/@ViewBag.QuantidadeTotal</span>
                        </div>
                        <div class="progress progress-sm mb-3" style="height:16px">
                            <div class="progress-bar bg-warning-500" role="progressbar" style="width: @ViewBag.QuantidadeAVencerMenor15%;" aria-valuenow="@ViewBag.QuantidadeAVencerMenor15" aria-valuemin="0" aria-valuemax="@ViewBag.QuantidadeTotal"></div>
                        </div>
                        <div class="d-flex">
                            Quantidade a Vencer >= 15
                            <span class="d-inline-block ml-auto">@ViewBag.QuantidadeAVencerMaior15/@ViewBag.QuantidadeTotal</span>
                        </div>
                        <div class="progress progress-sm mb-3" style="height:16px">
                            <div class="progress-bar bg-success-400" role="progressbar" style="width: @ViewBag.QuantidadeAVencerMaior15%;" aria-valuenow="@ViewBag.QuantidadeAVencerMaior15" aria-valuemin="0" aria-valuemax="@ViewBag.QuantidadeTotal"></div>
                        </div>


                    </div>
                </div>
                <div class="panel-content jqvmap-bg-ocean">
                    <div class="d-flex align-items-center">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div id="panel-4" class="panel panel-sortable" role="widget">
            <div class="panel-hdr" role="heading">
                <h2 class="ui-sortable-handle">Boletos em Aberto</h2>
                @*<div class="panel-saving mr-2" style="display:none"><i class="fal fa-spinner-third fa-spin-4x fs-xl"></i></div><div class="panel-toolbar" role="menu"><a href="#" class="btn btn-panel hover-effect-dot js-panel-collapse waves-effect waves-themed" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></a> <a href="#" class="btn btn-panel hover-effect-dot js-panel-fullscreen waves-effect waves-themed" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></a> <a href="#" class="btn btn-panel hover-effect-dot js-panel-close waves-effect waves-themed" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></a></div>*@
            </div>
            <div class="panel-container show" role="content">
                <div class="loader"><i class="fal fa-spinner-third fa-spin-4x fs-xxl"></i></div>
                <div class="panel-content jqvmap-bg-ocean p-0" style="height: 330px;overflow-y: scroll;">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Número Documento</th>
                                <th>Data Emissão</th>
                                <th>Data Vencimento</th>
                                <th>Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in ViewBag.ListaBoleto)
                            {
                                <tr>
                                    <td><a asp-area="Cliente" asp-controller="Boleto" asp-action="Imprimir" asp-route-id="@o.ID" target="_blank">@o.NumeroDocumento</a></td>
                                    <td><a asp-area="Cliente" asp-controller="Boleto" asp-action="Imprimir" asp-route-id="@o.ID" target="_blank">@o.DataEmissao.ToString("dd/MM/yyyy")</a></td>
                                    <td><a asp-area="Cliente" asp-controller="Boleto" asp-action="Imprimir" asp-route-id="@o.ID" target="_blank">@o.DataVencimento.ToString("dd/MM/yyyy")</a></td>
                                    <td><a asp-area="Cliente" asp-controller="Boleto" asp-action="Imprimir" asp-route-id="@o.ID" target="_blank">@String.Format("{0:C2}", o.ValorTitulo)</a></td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <div class="panel-content jqvmap-bg-ocean">
                    <div class="d-flex align-items-center">

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
    </script>
}