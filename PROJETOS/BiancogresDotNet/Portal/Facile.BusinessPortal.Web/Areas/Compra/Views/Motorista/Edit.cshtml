@model Facile.BusinessPortal.Model.Motorista
@using Facile.BusinessPortal.Model

@{
    ViewData["Title"] = "Motorista";
}


<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a asp-action="Index">Listagem</a>
    </li>
    <li class="breadcrumb-item active">motorista</li>
</ol>


<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Editar Motorista
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Minimizar"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Tela Cheia"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <form id="FormCad" accept-charset="UTF-8" asp-action="Edit" method="POST">
                        <input asp-for="ID" type="hidden" id="">
                        <input asp-for="EmpresaID" type="hidden" id="">

                        @if (ViewContext.ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                @foreach (var item in ViewContext.ViewData.ModelState)
                                {
                                    if (item.Value.Errors.Any())
                                    {
                                        <p>@(string.Join("", item.Value.Errors.Select(x => x.ErrorMessage)))</p>
                                    }
                                }
                            </div>
                        }

                        <div class="row">

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="simpleinput">Nome</label>
                                    <input asp-for="Nome" id="" class="form-control">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="simpleinput">CPF</label>
                                    <input asp-for="CPF" id="" data-inputmask="'mask': '999.999.999-99'" class="form-control">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="simpleinput">Telefone</label>
                                    <input asp-for="Telefone" data-inputmask="'mask': '(99)99999-9999'" id="" class="form-control">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="simpleinput">CNH</label>
                                    <input asp-for="CNH" id="" class="form-control">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="simpleinput">Data Vencimento</label>
                                    <input asp-for="DataVencimentoCNH" id="" type="text" class="form-control data-datepicker">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="simpleinput">Placa</label>
                                    <input asp-for="Placa" id="" class="form-control">
                                </div>
                            </div>

                        </div>

                        <div class="row mt-2">
                            <div class="col-md-4">
                                <div class="custom-control custom-checkbox mr-2 mr-lg-2 d-inline-block">
                                    <input asp-for="Habilitado" type="checkbox" class="custom-control-input" id="Habilitado">
                                    <label class="custom-control-label bolder" for="Habilitado"> Habilitado</label>
                                </div>
                            </div>
                        </div>


                        <div class="row mt-2 text-right">
                            <div class="col-md-12">
                                <a asp-action="Index" class="btn btn-secondary shadow-0 btn-sm ml-auto flex-shrink-0 waves-effect waves-themed">Listagem</a>
                                <button type="submit" class="btn btn-success shadow-0 btn-sm ml-auto flex-shrink-0 waves-effect waves-themed">Salvar</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/Util.js" asp-append-version="true"></script>
    <script src="~/smartadmin/js/formplugins/inputmask/inputmask.bundle.js"></script>
    <script>
        $(function () {

            $(":input").inputmask();

            $('input[name="Habilitado"]').on('click',
                function () {
                    $(this).val($(this).prop('checked'));
                }
            );

        });
    </script> 
}