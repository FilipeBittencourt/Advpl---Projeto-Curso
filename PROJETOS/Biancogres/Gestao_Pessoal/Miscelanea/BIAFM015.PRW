User Function BIAFM015()

	fPerg := "BIAFM015"
	fTamX1 := IIF(Alltrim(oApp:cVersion) == "MP8.11", 6, 10)
	ValidPerg()
	If !Pergunte(fPerg,.T.)
		Return
	EndIf

	U_BIAMsgRun("Atualizando E-Mail...",, {|| xeAtuSRA() })

Return

